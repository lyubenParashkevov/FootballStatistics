@using FootballStatistics.ViewModels.Match
@model MatchFormModel

@{
    ViewData["Title"] = "Add Match";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="MatchDate" class="form-label"></label>
                <input asp-for="MatchDate" type="date" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HomeTeamId" class="form-label">Home Team</label>
                <select asp-for="HomeTeamId" class="form-select" asp-items="Model.Teams">
                    <option value="">-- Select home team --</option>
                </select>
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AwayTeamId" class="form-label">Away Team</label>
                <select asp-for="AwayTeamId" class="form-select" asp-items="Model.Teams">
                    <option value="">-- Select away team --</option>
                </select>
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HomeGoals" class="form-label"></label>
                <input asp-for="HomeGoals" class="form-control" />
                <span asp-validation-for="HomeGoals" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AwayGoals" class="form-label"></label>
                <input asp-for="AwayGoals" class="form-control" />
                <span asp-validation-for="AwayGoals" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
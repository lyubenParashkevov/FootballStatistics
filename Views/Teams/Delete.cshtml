@using FootballStatistics.ViewModels.Team
@model TeamFormModel

@{
    ViewData["Title"] = "Delete Team";
}

<h2 class="text-center text-danger">@ViewData["Title"]</h2>
<hr />

<div class="alert alert-warning">
    Are you sure you want to delete this team?
</div>

<ul class="list-group mb-3">
    <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
    <li class="list-group-item"><strong>Goals Scored:</strong> @Model.GoalsScored</li>
    <li class="list-group-item"><strong>Goals Conceded:</strong> @Model.GoalsConceded</li>
</ul>

<form asp-action="DeleteConfirmed" asp-route-id="@ViewContext.RouteData.Values["id"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@using FootballStatistics.ViewModels.League
@model IEnumerable<LeagueListItemModel>

@{
    ViewData["Title"] = "Leagues";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Add League</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td>@league.Name</td>
                <td>@league.Country</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@league.Id" class="btn btn-sm btn-info">
                        Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@league.Id" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@league.Id" class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
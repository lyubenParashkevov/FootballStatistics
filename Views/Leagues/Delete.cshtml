@using FootballStatistics.ViewModels.League
@model LeagueFormModel

@{
    ViewData["Title"] = "Delete League";
}

<h2 class="text-center text-danger">@ViewData["Title"]</h2>
<hr />

<div class="alert alert-warning">
    Are you sure you want to delete this league?
</div>

<ul class="list-group mb-3">
    <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
    <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
</ul>

<form asp-action="DeleteConfirmed"
      asp-route-id="@ViewContext.RouteData.Values["id"]"
      method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>